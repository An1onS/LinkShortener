@model IEnumerable<LinkShortener.Models.Link>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Counter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td>
                    <a asp-action="FwLink" asp-route-id="@item.ShortUrl" > @Uri.UnescapeDataString(Url.Action("FwLink","Links", new { id = item.ShortUrl })) </a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Counter)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ShortUrl">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ShortUrl">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ShortUrl">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
