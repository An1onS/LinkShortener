@model LinkShortener.Models.Link

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Link</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" class="form-control" type="url"/>
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShortUrl" class="control-label"></label>
                <a asp-action="FwLink" asp-route-id="@Model.ShortUrl">@Uri.UnescapeDataString(Url.Action("FwLink", "Links", new { id = Model.ShortUrl }))</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
